# HR4 Hospital HR Management System - Environment Configuration
# Copy this file to .env and update with your settings

# Database Configuration
DB_HOST=localhost
DB_USER=root
DB_PASS=
DB_NAME=hr4_hospital
DB_PORT=3306

# Application Settings
APP_ENV=development
APP_NAME="HR4 Hospital HR Management System"
APP_VERSION=1.0.0

# API Configuration
API_BASE_URL=http://localhost/hospital_4/api
API_TIMEOUT=30

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION=86400

# Security
BCRYPT_ROUNDS=12

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost

# File Upload
MAX_UPLOAD_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,jpg,jpeg,png

# Email Configuration (optional)
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=465
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM_ADDRESS=no-reply@hr4hospital.com

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100
